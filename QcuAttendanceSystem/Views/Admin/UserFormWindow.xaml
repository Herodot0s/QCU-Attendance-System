<Window x:Class="QcuAttendanceSystem.Views.Admin.UserFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Details" Height="480" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Padding="25">
        <StackPanel>
            <TextBlock Text="User Information" FontSize="18" Foreground="#800000" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock Text="Full Name"/>
            <TextBox x:Name="txtName"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="School ID"/>
                    <TextBox x:Name="txtSchoolID"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Role"/>
                    <ComboBox x:Name="cmbRole" Height="35" Padding="5" VerticalContentAlignment="Center" SelectionChanged="cmbRole_SelectionChanged">
                        <ComboBoxItem Content="Student"/>
                        <ComboBoxItem Content="Professor"/>
                        <ComboBoxItem Content="Admin"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Username"/>
                    <TextBox x:Name="txtUsername"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Password"/>
                    <TextBox x:Name="txtPassword" ToolTip="Leave blank to keep unchanged (Edit Mode)"/>
                </StackPanel>
            </Grid>

            <StackPanel x:Name="pnlStudentInfo" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Course (e.g. BSIT)"/>
                        <TextBox x:Name="txtCourse"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Section (e.g. 4A)"/>
                        <TextBox x:Name="txtSection"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Cancel" IsCancel="True" Height="35" Width="100" Background="Transparent" BorderBrush="#800000" BorderThickness="1" Foreground="#800000" Click="Cancel_Click" Margin="0,0,10,0"/>
                <Button Content="Save User" IsDefault="True" Height="35" Width="100" Background="#800000" Foreground="White" BorderThickness="0" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>