<Window x:Class="QcuAttendanceSystem.Views.Professor.AddClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Class" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="#333"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Create New Class" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                <TextBlock Text="Enter the details for the new subject." FontSize="14" Foreground="#888" Margin="0,5,0,0"/>
                <Separator Margin="0,15,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Subject Code" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSubject" Text="COMP 101" Padding="10" Height="40" VerticalContentAlignment="Center" BorderBrush="#CCC"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Section" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSection" Text="BSCS 1A" Padding="10" Height="40" VerticalContentAlignment="Center" BorderBrush="#CCC"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Descriptive Title" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDesc" Text="Introduction to Computing" Padding="10" Height="40" VerticalContentAlignment="Center" BorderBrush="#CCC" Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Room" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtRoom" Text="LAB 1" Padding="10" Height="40" VerticalContentAlignment="Center" BorderBrush="#CCC"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Day" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbDay" Height="40" Padding="10" VerticalContentAlignment="Center">
                            <ComboBoxItem Content="Monday" IsSelected="True"/>
                            <ComboBoxItem Content="Tuesday"/>
                            <ComboBoxItem Content="Wednesday"/>
                            <ComboBoxItem Content="Thursday"/>
                            <ComboBoxItem Content="Friday"/>
                            <ComboBoxItem Content="Saturday"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Time Schedule" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="cmbStart" Grid.Column="0" Height="40" Padding="10" VerticalContentAlignment="Center"/>

                    <TextBlock Text="-" Grid.Column="1" VerticalAlignment="Center" Margin="10,0"/>

                    <ComboBox x:Name="cmbEnd" Grid.Column="2" Height="40" Padding="10" VerticalContentAlignment="Center"/>
                </Grid>

            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Width="100" Height="40" Background="Transparent" BorderBrush="#DDD" BorderThickness="1" Click="Cancel_Click" Margin="0,0,10,0"/>

                <Button Content="Create Class" Width="120" Height="40" Click="Save_Click" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#800000"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#600000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>