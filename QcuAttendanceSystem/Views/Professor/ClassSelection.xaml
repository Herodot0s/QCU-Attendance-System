<Page x:Class="QcuAttendanceSystem.Views.Professor.ClassSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="ClassSelection">

    <Page.Resources>
        <Style TargetType="TextBox" x:Key="SearchBoxStyle">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="20" Background="White" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🔍" Margin="10,0,5,0" VerticalAlignment="Center" Foreground="Gray"/>
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="AddButtonStyle">
            <Setter Property="Background" Value="#800000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="My Classes" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                <TextBlock Text="Manage your sections" FontSize="14" Foreground="#888" Margin="0,5,0,0"/>
            </StackPanel>

            <TextBox Grid.Column="1" Width="250" Margin="0,0,20,0" Style="{StaticResource SearchBoxStyle}" 
                     Tag="Search subjects..." VerticalAlignment="Center"/>

            <Button Grid.Column="2" Content="+ Add New Class " Style="{StaticResource AddButtonStyle}" Click="AddClass_Click"/>
        </Grid>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" BorderThickness="0">
            <ItemsControl x:Name="ClassesList">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="260" Height="180" Margin="0,0,20,20" Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#E0E0E0" BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Height="6" Background="{Binding ColorCode}" CornerRadius="10,10,0,0"/>

                                <StackPanel Grid.Row="1" Margin="20,15,20,0">
                                    <TextBlock Text="{Binding SubjectCode}" FontSize="20" FontWeight="Bold" Foreground="#333"/>
                                    <TextBlock Text="{Binding Description}" FontSize="13" Foreground="#666" TextTrimming="CharacterEllipsis" Margin="0,2,0,10"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="👥" Foreground="#999" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Section}" Foreground="#444" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="📍" Foreground="#999" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Room}" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>

                                <Border Grid.Row="2" BorderBrush="#F0F0F0" BorderThickness="0,1,0,0" Padding="15,10">
                                    <Grid>
                                        <TextBlock Text="{Binding StudentCount, StringFormat='{}{0} Students'}" 
                                                   VerticalAlignment="Center" Foreground="#888" FontSize="12"/>

                                        <Button Content="Manage" HorizontalAlignment="Right"
                                                Background="Transparent" Foreground="#800000" FontWeight="SemiBold"
                                                BorderThickness="0" Cursor="Hand"
                                                Click="ManageClass_Click" Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>