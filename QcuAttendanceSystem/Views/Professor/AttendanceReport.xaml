<Page x:Class="QcuAttendanceSystem.Views.Professor.AttendanceReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Attendance Master Report"
      FontFamily="Segoe UI"
      Background="White">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryMaroon" Color="#800000"/>
        <SolidColorBrush x:Key="PrimaryMaroonLight" Color="#FFF0F0"/>
        <SolidColorBrush x:Key="TextDark" Color="#2D3436"/>
        <SolidColorBrush x:Key="TextLight" Color="#636E72"/>

        <SolidColorBrush x:Key="StatusPresent" Color="#2E7D32"/>
        <SolidColorBrush x:Key="StatusLate" Color="#EF6C00"/>
        <SolidColorBrush x:Key="StatusAbsent" Color="#C62828"/>
        <Style x:Key="MaroonBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryMaroon}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlineBtn" TargetType="Button" BasedOn="{StaticResource MaroonBtn}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryMaroon}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryMaroon}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryMaroonLight}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryMaroon}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryMaroonLight}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryMaroon}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Width="35" Height="35" Background="White" 
                    BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" 
                    Cursor="Hand" MouseLeftButtonUp="Back_Click" Margin="0,0,15,0">
                <Path Data="M 12 8 L 7 13 L 12 18" 
                      Stroke="{StaticResource PrimaryMaroon}" StrokeThickness="2" 
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Master Attendance Record" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryMaroon}"/>
                <TextBlock Text="View student attendance history &amp; remarks" FontSize="13" Foreground="{StaticResource TextLight}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                    <Border Width="28" Height="28" Background="{StaticResource StatusPresent}" CornerRadius="6" Margin="0,0,8,0">
                        <TextBlock Text="P" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Present" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                    <Border Width="28" Height="28" Background="{StaticResource StatusLate}" CornerRadius="6" Margin="0,0,8,0">
                        <TextBlock Text="L" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Late" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="28" Height="28" Background="{StaticResource StatusAbsent}" CornerRadius="6" Margin="0,0,8,0">
                        <TextBlock Text="A" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Absent" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" BorderBrush="{StaticResource PrimaryMaroon}" BorderThickness="1" 
                    CornerRadius="4" Padding="2" HorizontalAlignment="Left" Width="300">
                <ComboBox x:Name="cmbClasses" Height="38"
                          BorderThickness="0" Background="Transparent"
                          VerticalContentAlignment="Center"
                          DisplayMemberPath="FullClassName" 
                          SelectedValuePath="ClassID" 
                          SelectionChanged="cmbClasses_SelectionChanged"/>
            </Border>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Refresh" Style="{StaticResource OutlineBtn}" Height="42" Width="100" Click="Refresh_Click" Margin="0,0,10,0"/>
                <Button Content="Export CSV" Style="{StaticResource MaroonBtn}" Height="42" Width="120" Click="Export_Click"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Background="White" CornerRadius="4" BorderBrush="#E0E0E0" BorderThickness="1">
            <DataGrid x:Name="ReportGrid" 
                      IsReadOnly="True" 
                      CanUserAddRows="False"
                      CanUserResizeRows="False"
                      RowHeight="45"
                      LoadingRow="ReportGrid_LoadingRow">
            </DataGrid>
        </Border>

    </Grid>
</Page>