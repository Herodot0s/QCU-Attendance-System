<Page x:Class="QcuAttendanceSystem.Views.Professor.AttendanceSheet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="AttendanceSheet" Background="White">

    <Page.Resources>
        <Style x:Key="StatusRadio" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="← Back" Cursor="Hand" Foreground="#888" Margin="0,0,15,0" VerticalAlignment="Bottom" MouseDown="Back_Click"/>
                    <TextBlock Text="Attendance Sheet" FontSize="24" FontWeight="Bold" Foreground="#333"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="55,5,0,0">
                    <Border Background="#800000" CornerRadius="3" Padding="8,2" Margin="0,0,10,0">
                        <TextBlock x:Name="lblSubjectCode" Text="COMP 101" Foreground="White" FontWeight="Bold" FontSize="12"/>
                    </Border>
                    <TextBlock x:Name="lblDetails" Text="Introduction to Computing • BSCS 1A" VerticalAlignment="Center" Foreground="#666"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Text="DATE" FontSize="10" Foreground="#999" FontWeight="Bold" HorizontalAlignment="Right"/>
                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="10,5" Margin="0,2,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📅" Margin="0,0,8,0"/>
                        <TextBlock x:Name="txtDate" Text="Dec 01, 2025" FontWeight="SemiBold" Foreground="#333"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Student List" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#444"/>

            <Button HorizontalAlignment="Right" Click="MarkAllPresent_Click"
                    Background="Transparent" BorderThickness="1" BorderBrush="#4CAF50" Foreground="#4CAF50"
                    Padding="10,5" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="4">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,5">
                                <TextBlock Text="✓" Margin="0,0,5,0"/>
                                <TextBlock Text="Mark All Present"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <DataGrid x:Name="AttendanceGrid" Grid.Row="2"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserSortColumns="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#F0F0F0"
                  BorderBrush="#E0E0E0" BorderThickness="1"
                  RowHeight="45"
                  Background="White">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F9F9F9"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#555"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="STUDENT ID" Binding="{Binding StudentID}" Width="100" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Foreground" Value="#666"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="NAME" Binding="{Binding FullName}" Width="*" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#333"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="TIME IN" Binding="{Binding TimeInDisplay}" Width="90" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#2E7D32"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="TIME OUT" Binding="{Binding TimeOutDisplay}" Width="90" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#C62828"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="STATUS" Width="240">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="10,0">
                                <RadioButton Content="Present" GroupName="{Binding StudentID}" IsChecked="{Binding IsPresent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource StatusRadio}" Foreground="#2E7D32"/>

                                <RadioButton Content="Late" GroupName="{Binding StudentID}" IsChecked="{Binding IsLate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource StatusRadio}" Foreground="#EF6C00"/>

                                <RadioButton Content="Absent" GroupName="{Binding StudentID}" IsChecked="{Binding IsAbsent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource StatusRadio}" Foreground="#C62828"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="REMARKS" Binding="{Binding Remarks}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="FontStyle" Value="Italic"/>
                            <Setter Property="Foreground" Value="Gray"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Margin="0,20,0,0" BorderBrush="#EEE" BorderThickness="0,1,0,0" Padding="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save Attendance Record" Width="200" Height="45" Click="Save_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#800000"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#600000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Page>