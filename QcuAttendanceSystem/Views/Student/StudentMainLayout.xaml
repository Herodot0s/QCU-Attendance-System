<Window x:Class="QcuAttendanceSystem.Views.Student.StudentMainLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QCU Student Portal" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="StudentNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <Grid Margin="{TemplateBinding Padding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                           Grid.Column="0" FontSize="16" VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#990000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#800000">
            <StackPanel>
                <StackPanel Margin="0,40,0,40">
                    <Border Width="60" Height="60" CornerRadius="30" Background="White" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Image Source="/Assets/logo_qcu.png" Margin="5"/>
                    </Border>
                    <TextBlock Text="STUDENT PORTAL" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="MENU" Foreground="#AAFFFFFF" FontSize="11" Margin="25,10"/>
                <Button Content="Enrollment" Tag="✍️" Style="{StaticResource StudentNavButtonStyle}" Click="Nav_Enrollment_Click"/>
                <Button Content="My Schedule" Tag="📅" Style="{StaticResource StudentNavButtonStyle}" Click="Nav_Schedule_Click"/>
                <Button Content="Attendance History" Tag="📋" Style="{StaticResource StudentNavButtonStyle}" Click="Nav_History_Click"/>

                <TextBlock Text="ACCOUNT" Foreground="#AAFFFFFF" FontSize="11" Margin="25,30,25,10"/>
                <Button Content="Logout" Tag="🚪" Style="{StaticResource StudentNavButtonStyle}" Click="Nav_Logout_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E5E5E5" BorderThickness="0,0,0,1">
                <Grid Margin="30,0">
                    <TextBlock x:Name="PageTitle" Text="My Class Schedule" VerticalAlignment="Center" 
                               FontSize="20" FontWeight="SemiBold" Foreground="#333"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <StackPanel VerticalAlignment="Center" Margin="0,0,15,0">
                            <TextBlock x:Name="TxtStudentName" Text="Loading..." FontWeight="SemiBold" Foreground="#333" TextAlignment="Right"/>

                            <TextBlock x:Name="TxtStudentID" Text="Loading..." FontSize="12" Foreground="#888" TextAlignment="Right"/>
                        </StackPanel>

                        <Border Width="40" Height="40" CornerRadius="20" Background="#F0F0F0" BorderBrush="#DDD" BorderThickness="1">
                            <TextBlock x:Name="TxtInitials" Text="--" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#666" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <Frame x:Name="StudentFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>