<Page x:Class="QcuAttendanceSystem.Views.Student.EnrollmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Course Enrollment">

    <Page.Resources>
        <!-- Card Style -->
        <Style TargetType="Border" x:Key="ClassCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDD" BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Course Enrollment" FontSize="24" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Select subjects to add to your schedule for this semester." Foreground="#666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Available Classes List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="AvailableClassesList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300" Height="160" Style="{StaticResource ClassCardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{Binding SubjectCode}" FontSize="18" FontWeight="Bold" Foreground="#800000"/>
                                    <TextBlock Text="{Binding Description}" FontSize="13" Foreground="#555" Margin="0,2,0,10" TextTrimming="CharacterEllipsis"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <TextBlock Text="👨‍🏫 "/>
                                        <TextBlock Text="{Binding ProfessorName}" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🕒 "/>
                                        <TextBlock Text="{Binding Schedule}" FontSize="12" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>

                                <Button Grid.Row="1" Content="Enroll" 
                                        Background="#2E7D32" Foreground="White" BorderThickness="0"
                                        Padding="15,6" HorizontalAlignment="Right" Cursor="Hand"
                                        Click="Enroll_Click" Tag="{Binding ClassID}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>